# Configurazione di esempio per le variabili
# Copiare questo file in terraform.tfvars e modificare secondo le proprie esigenze

# Regione AWS
region = "eu-central-1"

# Nome dell'istanza
instance_name = "mia-istanza-ec2"

# Tipo di istanza
instance_type = "t3.micro"

# VPC e Subnet (lasciare vuoto per usare il VPC default)
# vpc_id    = "vpc-xxxxxxxxx"
# subnet_id = "subnet-xxxxxxxxx"

# Key pair per SSH
key_name = "mia-chiave-ssh"

# CIDR blocks per accesso SSH (limitare in produzione!)
ssh_cidr_blocks = ["0.0.0.0/0"]

# Configurazione volume root
root_volume_size = 20
root_volume_type = "gp3"
encrypt_volume   = true

# Elastic IP
create_eip = false

# Monitoring dettagliato
enable_detailed_monitoring = false

# Protezione dalla terminazione
enable_termination_protection = false

